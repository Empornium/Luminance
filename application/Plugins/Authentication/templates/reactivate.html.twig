{% extends "core/public_page.html.twig" %}
{% block scripts %}
    {{ parent() }}
    <script defer src="/static/functions/cinfo.js" type="text/javascript"></script>
{% endblock %}

{% block title %}Reactivate Account{% endblock %}

{% block main_content %}
    <div class="full_width centered">
        <div class="important">
            <h2>Your account has been disabled due to inactivity!</h2>
            </br>
            <p>To request a reactivation fill out the form below.</p>
            <p>Staff will review your request and respond via email.</p>
            </br>
        </div>
        <br/><br/>
        <div class="flex_item center">
            <form method="POST" action="/reactivate" />
                <div>
                    <input type="hidden" name="cinfo" value="auth" id="cinfo" />
                    <input type="hidden" name="token" value="{{ secretary.getToken("auth.reactivate") }}" />
                    <div id="identifier">
                        <input type="text" name="username" placeholder="Registered username"  value="" required autofocus/>
                        <input type="text" name="email" placeholder="Registered e-mail address"  value="" required/>
                    </div>
                    </br>
                    <p>Roughly how long has it been since you last logged in?</p>
                    <input type="text" name="information" placeholder="3 months, 6 months, a year?"  value="" required/>
                </div>
                <div id="options">
                    <p>
                        <input type="submit" name="submit" value="reactivate" />
                    </p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
