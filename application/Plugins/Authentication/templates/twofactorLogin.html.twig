{% extends "core/public_page.html.twig" %}
{% block scripts %}
    {{ parent() }}
    <script defer src="/static/functions/cinfo.js" type="text/javascript"></script>
{% endblock %}

{% block main_content %}
    <form method="POST" action="/twofactor/login" autocomplete="off" >
        <input type="hidden" name="token" value="{{ secretary.getToken("user.twofactor.login") }}" />
        <input class="text-input password" type="text" name="code" placeholder="2FA Code" autofocus/>
        <div class="center">
            <div id="options">
                <p>
                    <span><a href="/twofactor/recover">lost secret key</a></span>
                    <input id="login_button" type="submit" name="submit" value="login" />
                </p>
            </div>
        </div>
    </form>
{% endblock %}
