{% extends "core/public_page.html.twig" %}
{% block scripts %}
    {{ parent() }}
    <script defer src="/static/functions/cinfo.js" type="text/javascript"></script>
{% endblock %}

{% block title %}
    {% if settings.site.open_registration or invite_key %}
        Register
    {% else %}
        Registrations are closed
    {% endif %}
{% endblock %}

{% block main_content %}
    {% if settings.site.open_registration or invite_key %}
        <form method="POST" action="/user/register" />
            <div>
                <input type="hidden" name="cinfo" value="auth" id="cinfo" />
        {% if invite_key %}
                <input type="hidden" name="invite_key" value="{{invite_key}}" />
        {% endif %}
                <div id="email">
                    <input type="text" name="email" placeholder="Valid permanent e-mail address"  value="{{email}}" autofocus/>
                </div>
            </div>
            <div class="center">
                <div id="options">
                    <p>
                        <input type="submit" name="submit" value="register" />
                    </p>
                </div>
            </div>
        </form>
    {% endif %}
{% endblock %}
