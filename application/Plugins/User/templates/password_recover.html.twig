{% extends "core/public_page.html.twig" %}
{% block scripts %}
    {{ parent() }}
    <script defer src="/static/functions/cinfo.js" type="text/javascript"></script>
{% endblock %}

{% block title %}Forgotten Password{% endblock %}

{% block main_content %}
    <form method="POST" action="/user/recover" />
        <div>
            <input type="hidden" name="cinfo" value="auth" id="cinfo" />
            <input type="hidden" name="token" value="{{ secretary.getToken("user.password.recover") }}" />
            <div id="identifier">
                <input type="text" name="identifier" placeholder="Registered e-mail address or username"  value="{{identifier}}" autofocus/>
            </div>
        </div>
        <div class="center">
            <div id="options">
                <p>
                    <input type="submit" name="submit" value="recover" />
                </p>
            </div>
        </div>
    </form>
{% endblock %}
